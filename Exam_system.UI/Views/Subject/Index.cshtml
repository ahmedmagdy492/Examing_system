@using Microsoft.AspNet.Identity
@model List<Exam_system.UI.Models.Subject>
@{
    ViewBag.Title = "Subjects";
}
    <div class="container" style="margin-top: 100px;">
        @if (User.IsInRole("Admin"))
        {
            <div style="padding: 20px;">
                @Html.ActionLink("Create New", "Create", "Subject")
            </div>
        }
        @if (Model.Count == 0)
        {
            <h3 style="text-align: center;">No Subjects have been added yet</h3>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Creation Date
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subject in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(@subject.Name, "Details", "Subject", new { id = subject.Id }, null)</td>
                            <td>@subject.CreationDate</td>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Subject", new { id = subject.Id }, null) |
                                    @Html.ActionLink("Delete", "Delete", "Subject", new { id = subject.Id }, null)
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>