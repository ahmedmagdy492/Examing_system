@using Microsoft.AspNet.Identity
@model List<Exam_system.UI.Models.Exam>
@{
    ViewBag.Title = "Exams";
}
<div class="container" style="margin-top: 30px;">
    <div class="row">
        @if (Model.Count() == 0)
        {
            <h3 style="text-align: center;color: #808080;">No Exams Were Found</h3>
        }
        else
        {
            foreach (var exam in Model)
            {
                <div class="col-md-3">
                    <div class="thumbnail">
                        <h2>@exam.Name</h2>
                        <p>@exam.Subject.Name</p>
                        <a href="/Subject/SubjectExam?studentId=@User.Identity.GetUserId()&examId=@exam.Id">Start Exam</a>
                    </div>
                </div>
            }
        }
    </div>
</div>